\ProvidesExplPackage{packages/minted-setup}{2023--27--12}{1.0}{%
Minted environment setup.
}

\RequirePackage{xcolor}

\usemintedstyle{gruvbox-light}

\definecolor{LightGray}{gray}{0.9}

\setminted{%
	numbers=right,
	linenos=true,
	autogobble,
	breaklines,
	tabsize=4,
	bgcolor=LightGray,
	frame=leftline,
	framerule=0.35pt,
	framesep=2mm,
	numbersep=1mm,
	highlightcolor=LimeGreen,
	curlyquotes=true,
	mathescape,
	stepnumber=1,
	fontsize=\footnotesize,
	xleftmargin=0cm,
}

\setmintedinline{%
	bgcolor=white,
	fontsize=\normalsize,
}

% \<lang>inline|| commands definitions
\newmintinline{c}{}
\newmintinline{cpp}{}
\newmintinline{cs}{}
\newmintinline{lua}{}
\newmintinline{sql}{}
\newmintinline{text}{}
